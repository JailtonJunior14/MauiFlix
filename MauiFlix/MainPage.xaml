<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.MainPage"
             BackgroundColor="Black">
    <ContentPage.Resources>
        <ResourcesDictionary>
            <Style x:Key="btncommon" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="VerticalOptions" Value="Fill"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="1"/>
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="BorderWidth" Value="1"/>

            </Style>
        </ResourcesDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="*,*,*,*,*,*"
                  RowSpacing="1" ColumnSpacing="1">
                <Button Grid.Row="0" Grid.Column="0" 
                        Style="{StaticResource btncommon}"
                        x:Name="acao" Text="Ação" Clicked="acao_Clicked"/>
                <Button Grid.Row="0" Grid.Column="1"
                        Style="{StaticResource btncommon}"
                        x:Name="animacao" Text="Animação" Clicked="animacao_Clicked"/>
                <Button Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource btncommon}"
                        x:Name="aventura" Text="Aventura" Clicked="aventura_Clicked"

            </Grid>
        </ScrollView>
    </ContentPage.Content>



    </ContentPage>
